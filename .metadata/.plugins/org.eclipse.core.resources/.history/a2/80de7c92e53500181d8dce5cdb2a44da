 */

#ifndef CLIENT_H_
#define CLIENT_H_
#include"validationFormat.h"
#include "Date.h"
#include "Cheque.h"
#include "Epargne.h"// ajouter pour TP3
#include <iostream>

namespace banque{
/**
 * \class Client
 * \brief Une classe qui permet de construire un objet client.
 */
class Client {
public:
	Client(int p_noFolio, const std::string& p_nom, const std::string& p_prenom, const std::string& p_telephone);

	int reqNoFolio() const;

	const std::string reqNom() const;

	const std::string reqPrenom() const;

	const std::string reqTelephone() const;

	std::string reqClientFormate() const;

	util::Date reqDateOuverture() const;

	void asgTelephone(const std::string& p_telephone);

	bool operator == (const Client& p_client) const;

	bool operator < (const Client& p_client)const;

private:
	int m_noFolio;
	std::string m_nom;
	std::string m_prenom;
	std::string m_telephone;
	util::Date m_dateOuverture;
};


}  /* namespace banque */
#endif /* CLIENT_H_ */
