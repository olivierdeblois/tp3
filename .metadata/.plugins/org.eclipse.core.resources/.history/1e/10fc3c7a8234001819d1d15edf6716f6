#ifndef EPARGNE_H_
#define EPARGNE_H_

#include <iostream>
#include <sstream>
using namespace std;

/**
 * \class Epargne
 * \brief une classe qui permet de construire un objet Epargne
 */
class Epargne {
public:
	Epargne(int p_noCompte, double p_tauxInteret, double p_solde, const std::string& p_description="Epargne");
	virtual double calculerInteret();
	std::string reqCompteFormate() const;
	virtual Compte* clone() const;
	virtual ~Epargne ();
private:
	int m_noCompte;
	double m_tauxInteret;
	double m_solde;
	std::string m_description;
};

#endif /* EPARGNE_H_ */
